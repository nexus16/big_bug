<p id="notice"><%= notice %></p>
<div class="row review-show-page">
    <div class="col-md-12 text-center">
        <figure class="movie-poster"><%=image_tag(@review.image,:class => "detail_image")%></figure>
    </div>
    <div class="col-md-8 col-md-offset-2">
        <h1><%=@review.title%></h1>
        <div class="content">
            <%=@review.content.html_safe%>
        </div>
        
        <div class="clearfix">
            <div class="vote_count pull-left">
                <%= @review.get_likes.size %>
            </div> 
            
            <div class="votes pull-left">
                <% if current_user.liked? @review %>
                  <%= link_to "", unlike_review_path(@review), method: :get, remote: true, class: 'unlike_review fa fa-thumbs-up' %>
                <% else %>
                  <%= link_to "", like_review_path(@review), method: :get, remote: true, class: 'like_review fa fa-thumbs-o-up' %>
                <% end %>
            </div> 
        </div>
    </div>
        
    <div class="col-md-8 col-md-offset-2"><hr></div>
        
        <div id="comments_<%= @review.id %>" class="col-md-8 col-md-offset-2">
            <% @review.comments.each do |c| %>
            <p class="comments">
                <% if c.user %>
                    <strong><%= c.user.name %> : </strong>
                <% else %>
                    <strong>noname : </strong>
                <% end %>
                
                <%= c.body %>
                <% if c.user == current_user %>
                    <%= link_to '', [c.review, c],
                       data: {confirm: 'Are you sure?'},
                       :method => :delete,
                       :class => 'delete glyphicon glyphicon-remove' 
                       %>
                    <%= link_to "", edit_review_comment_path(c.review, c), class: "delete glyphicon glyphicon-cog"  %>
                <% end %>
            </p>
            <% end %>
            <% if current_user %>
                <%= form_for([@review, @comment ||= Comment.new] , remote: false) do |f| %>
                    <div class="field">
                        <%= f.text_area :body , :required => 'required', id: "comment_content_#{@review.id}"%>
                    </div>
                    <div class="actions">
                        <%= f.submit %>
                    </div>
                <% end %>
            <% else %>
                <p style="color:red">dang nhap de comment</p>
            <% end %>
        </div>
        
       
    </div>
</div>

<% if  @review.user == current_user %>
    <%= link_to 'Edit', edit_review_path(@review) %> |
    <%= link_to "Delete",review_path(@review), method: :delete, data: {confirm: t("application.confirm")} %> |
<% end %>
<%= link_to 'Back', reviews_path %>
