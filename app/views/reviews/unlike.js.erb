
$('.unlike_review').bind('ajax:success', function(){
   $(this).parent().html('<%= escape_javascript @review.votes_for.size.to_s %>');
   $('.vote .unlike_review').hide();
   $('.vote').html(' <%= link_to raw('<i class="fa fa-thumbs-o-up" aria-hidden="true"></i>'), like_review_path(@review), method: :get, remote: true, :class =>'like_review' %>');
});
